{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to local process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "/app/executable"
        },
        {
            "name": "Launch Remote",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "/app",
            "port": 2345,
            "host": "localhost",
            "cwd": "${workspaceFolder}",
            "trace": "verbose"
        },
        {
            "name": "Debug Executable",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "/app/executable",
            "args": [],
            "trace": "verbose",
            "showLog": true
        }
    ]
}