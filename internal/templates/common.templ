templ Boilerplate(contents templ.Component, imports templ.Component) {
	<!DOCTYPE html>
	<html lang="en" data-theme="light">
		<head>
			<script src="/static/js/debug.js"></script>
			<script type="importmap">
			{
				"imports": {
					"echarts": "/static/js/echarts.esm.js",
					"custom": "/static/js/custom.esm.js",
					"lodash": "/static/js/lodash.js"
				}
			}
			</script>
			<script src="/static/js/custom.esm.js" type="module"></script>

			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1"/>
			<meta name="google" content="notranslate"/>
			<meta
				name="description"
				content="Here goes the keywords of the page, separated by commas. This is a good practice for SEO."
			/>
			<title>Go template</title>
			<link rel="icon" type="image/png" href="/favicon.png"/>
			<link rel="apple-touch-icon" href="/favicon.png"/>
			@imports
		</head>
		<body>
			@contents
			<div id="load-time" style="position: fixed; bottom: 0; left: 100px; background-color: #f0f0f0; padding: 2px; font-family: monospace; word-spacing: -5px; letter-spacing: -1px; color: black;">
				Loading...
			</div>
		</body>
	</html>
}
