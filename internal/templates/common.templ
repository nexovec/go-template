package templates


templ Empty() {

}

// client side redirect

script RedirectWithTimeout(url string, timeoutMs int) {
	redirectWithTimeout(url, timeoutMs);
}


// client side redirect

script Redirect(url string) {
	window.location.href=url;
}

templ Paragraph(text string) {
	<p>{text}</p>
}

templ LazySwapComponent(TargetID string, urlPath string) {
	<div hx-target={TargetID} hx-trigger="load" hx-get={urlPath}></div>
}

templ ContentComponent(contents templ.Component) {
	<main class="container">
		@contents
		{ children... }
	</main>
}

templ LinkTag(link string) {
	<link rel="stylesheet" href={ link }/>
}

templ ScriptTag(link string, isModule bool, deferredLoad bool, asyncLoad bool) {
	<script src={ link } if isModule {
	type="module"
} if deferredLoad {
	defer
} if asyncLoad {
	async
}></script>
	// FIXME: wtf, async scripts get rendered as async="", report this
	// FIXME: you can't put a comment into the if statement, retest and report this
}

templ Concatenate(components []templ.Component) {
	for _, c := range components {
		@c
	}
}

